{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "es2015",
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "noImplicitAny": false,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ]
}