{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "no-console": {
      "severity": "warn"
    },
    "indent": [
      true,
      "spaces",
      2
    ],
    "linebreak-style": [
      true,
      "LF"
    ],
    "new-parens": true,
    "quotemark": [
      true,
      "single",
      "avoidEscape"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "prefer-const": true,
    "variable-name": {
      "severity": "warn",
      "options": [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore"
      ]
    },
    "curly": false,
    "whitespace": [
      true,
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-type-operator",
      "check-preblock"
    ],
    "no-irregular-whitespace": true,
    "member-access": [
      true,
      "no-public"
    ],
    "only-arrow-functions": false,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "no-string-literal": false,
    "no-bitwise": false,
    "trailing-comma": false,
    "ordered-imports": false,
    "interface-over-type-literal": false,
    "max-line-length": false,
    "member-ordering": false,
    "no-shadowed-variable": false
  },
  "rulesDirectory": []
}